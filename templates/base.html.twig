<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="top-bar margin-bottom-2" id="example-menu">
            <div class="top-bar-left">
                <ul class="vertical medium-horizontal menu" data-dropdown-menu>
                    <li class="menu-text"><a href="{{ path('app_dashboard') }}">@UniLP CrM</a></li>
                    <li><a href="{{ path('app_contact_index') }}">Contact</a></li>
                    <li><a href="{{ path('app_opportunity_index') }}">Opportunité</a></li>
                    <li><a href="{{ path('app_product_index') }}">Produit</a></li>
                </ul>
            </div>
        </div>
        <div class="grid-container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
